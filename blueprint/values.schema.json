{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "applicationGroupDisplayName": {
      "type": "string",
      "minLength": 1,
      "maxLength": 30,
      "description": "Display name for Application Group"
    },
    "applicationGroupName": {
      "type": "string",
      "minLength": 1,
      "maxLength": 30,
      "description": "Name of the Application Group"
    },
    "applicationName": {
      "type": "string",
      "maxLength": 50,
      "description": "Name of the Application for CmdBuild Component"
    },
    "developersList": {
      "type": "array",
      "description": "List of developers' mail addresses",
      "items": {
        "type": "string"
      }
    },
    "permissions": {
      "type": "array",
      "description": "List of users (displayName of AD Group) to give permissions to",
      "items": {
        "type": "string"
      }
    },
    "policyPrApprovers": {
      "type": "boolean",
      "description": "If `true` set policy on Azure DevOps to require approvers for a PR",
      "default": false
    },
    "prApproversList": {
      "type": "array",
      "description": "List of PR Approvers' mail addresses",
      "items": {
        "type": "string"
      }
    },
    "approversList": {
      "type": "array",
      "description": "List of Approvers' mail addresses",
      "items": {
        "type": "string"
      }
    }
  },
  "required": [
      "applicationGroupName",
      "applicationGroupDisplayName",
      "policyPrApprovers"
    ]
}
