{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": true,
  "properties": {
    "Base": {
      "additionalProperties": false,
      "properties": {
        "ProjectID": {
          "default": "progetto-1",
          "description": "GCP Project ID where the application will be deployed",
          "enum": [
            "progetto-1"
          ],
          "title": "ProjectID",
          "type": "string"
        }
      },
      "title": "Base",
      "type": "object"
    },
    "WordPress": {
      "additionalProperties": false,
      "description": "WordPress application parameters section",
      "properties": {
        "namespace": {
          "default": "namespacewordpress",
          "description": "namespace where the application will be deployed",
          "title": "namespace",
          "type": "string"
        },
        "password": {
          "default": "namespacewordpress",
          "description": "Password utente",
          "title": "password",
          "type": "string"
        },
        "urlapplicativo": {
          "default": "inserireurlapplicativo",
          "description": "URL dell'applicativo",
          "title": "urlapplicativo",
          "type": "string"
        },
        "username": {
          "default": "namespacewordpress",
          "description": "Nome utente",
          "title": "username",
          "type": "string"
        },
        "version": {
          "default": "25.0.0",
          "description": "version of the WordPress application",
          "enum": [
            "24.2.11",
            "25.0.0",
            "27.1.1",
            "27.1.2",
            "27.1.3"
          ],
          "title": "version",
          "type": "string"
        }
      },
      "title": "WordPress",
      "type": "object"
    }
  },
  "required": [
    "Base"
  ],
  "type": "object"
}